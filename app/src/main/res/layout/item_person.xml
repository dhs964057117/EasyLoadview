<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:background="#03000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.dhs.tools.shimmer.ShimmerImageView
        android:id="@+id/img_news"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img"
        app:shimmer_base_color="#00000000"
        app:shimmer_colored="true"
        app:shimmer_duration="1000"
        app:shimmer_highlight_color="#ffffff" />

    <com.dhs.tools.shimmer.ShimmerTextView
        android:id="@+id/tv_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Vin Diesel"
        app:shimmer_base_color="#00000000"
        app:shimmer_colored="true"
        app:shimmer_duration="1000"
        app:shimmer_highlight_color="#ffffff" />

    <com.dhs.tools.shimmer.ShimmerTextView
        android:id="@+id/tv_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="a famous actor"
        android:textColor="@color/colorFontGreen"
        app:shimmer_base_color="#00000000"
        app:shimmer_colored="true"
        app:shimmer_duration="1000"
        app:shimmer_highlight_color="#ffffff" />

    <com.dhs.tools.shimmer.ShimmerTextView
        android:id="@+id/tv_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="fast furious a famous actor"
        app:shimmer_base_color="#00000000"
        app:shimmer_colored="true"
        app:shimmer_duration="1000"
        app:shimmer_highlight_color="#ffffff" />
</LinearLayout>